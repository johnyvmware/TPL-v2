{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Information",
      "TransactionProcessingSystem": "Debug"
    }
  },
  "OpenAI": {
    "Model": "gpt-4o-mini",
    "MaxTokens": 4001,
    "Temperature": 0.0
  },
  "TransactionApi": {
    "BaseUrl": "http://localhost:5000",
    "TimeoutSeconds": 10,
    "EnableMockData": true
  },
  "Export": {
    "OutputDirectory": "./output/dev"
  },
  "Pipeline": {
    "BoundedCapacity": 50,
    "MaxDegreeOfParallelism": 2,
    "TimeoutMinutes": 5
  },
  "Neo4j": {
    "Database": "transactions-dev",
    "MaxConnectionPoolSize": 10,
    "ConnectionTimeoutSeconds": 15
  }
}