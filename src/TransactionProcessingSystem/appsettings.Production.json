{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "TransactionProcessingSystem": "Information"
    }
  },
  "OpenAI": {
    "Model": "gpt-4o",
    "MaxTokens": 300,
    "Temperature": 0.1
  },
  "TransactionApi": {
    "BaseUrl": "https://api.transactions.com",
    "TimeoutSeconds": 60,
    "MaxRetries": 5,
    "BatchSize": 100,
    "EnableMockData": false
  },
  "Export": {
    "OutputDirectory": "/app/data/output",
    "BufferSize": 500
  },
  "Pipeline": {
    "BoundedCapacity": 200,
    "TimeoutMinutes": 30
  },
  "Neo4j": {
    "Database": "transactions-prod",
    "MaxConnectionPoolSize": 100,
    "ConnectionTimeoutSeconds": 60,
    "MaxTransactionRetryTimeSeconds": 60
  }
}