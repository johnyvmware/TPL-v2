{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "OpenAI": {
    "Model": "gpt-4o-mini",
    "MaxTokens": 200,
    "Temperature": 0.1
  },
  "MicrosoftGraph": {
    "EmailSearchDays": 2
  },
  "TransactionApi": {
    "TimeoutSeconds": 30,
    "MaxRetries": 3
  },
  "Export": {
    "OutputDirectory": "./output",
    "FileNameFormat": "transactions_{0:yyyyMMdd_HHmmss}.csv",
    "BufferSize": 100
  },
  "Pipeline": {
    "BoundedCapacity": 100,
    "MaxDegreeOfParallelism": 4,
    "TimeoutMinutes": 10
  },
  "Neo4j": {
    "MaxConnectionPoolSize": 50,
    "ConnectionTimeoutSeconds": 30,
    "MaxTransactionRetryTimeSeconds": 30
  }
}