{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "OpenAI": {
    "Model": "gpt-4",
    "MaxTokens": 2000,
    "Temperature": 0.7
  },
  "MicrosoftGraph": {
    "EmailSearchDays": 30
  },
  "TransactionApi": {
    "BaseUrl": "https://api.transactions.example.com",
    "TimeoutSeconds": 30,
    "MaxRetries": 3,
    "BatchSize": 100,
    "EnableMockData": true
  },
  "Export": {
    "OutputDirectory": "./exports",
    "FileNameFormat": "transactions_{0}.json",
    "BufferSize": 8192
  },
  "Pipeline": {
    "BoundedCapacity": 1000,
    "MaxDegreeOfParallelism": 4,
    "TimeoutMinutes": 60
  },
  "Neo4j": {
    "Database": "neo4j",
    "MaxConnectionPoolSize": 50,
    "ConnectionTimeoutSeconds": 30,
    "MaxTransactionRetryTimeSeconds": 60
  },
  "Secrets": {
    "OpenAI": {
      "ApiKey": "sk-your-openai-api-key-here"
    },
    "MicrosoftGraph": {
      "ClientId": "00000000-0000-0000-0000-000000000000",
      "ClientSecret": "your-client-secret-here",
      "TenantId": "00000000-0000-0000-0000-000000000000"
    },
    "Neo4j": {
      "ConnectionUri": "bolt://localhost:7687",
      "Username": "neo4j",
      "Password": "your-password-here"
    }
  }
}