{
  "Logging": {
    "LogLevel": {
      "Default": "Debug"
    }
  },
  "OpenAI": {
    "MaxTokens": 1000,
    "Temperature": 0.1
  },
  "MicrosoftGraph": {
    "EmailSearchDays": 3
  },
  "Export": {
    "FileNameFormat": "transactions_{0}.json",
    "BufferSize": 8192
  },
  "Pipeline": {
    "InputBufferCapacity": 80,
    "TimeoutMinutes": 2
  },
  "Neo4j": {
    "MaxConnectionPoolSize": 10,
    "ConnectionTimeoutSeconds": 15,
    "MaxTransactionRetryTimeSeconds": 15
  },
  "TransactionFetcher": {
    "InputDirectory": "data",
    "MetadataLineCount": 37,
    "Encoding": "windows-1250"
  }
}